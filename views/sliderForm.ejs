<%- include("header") %>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Add Slider Data</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/dashbord">Dashboard</a></li>
                    <li class="active">Slider</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">

            <div class="col-xs-6 col-sm-6">
                <div class="card">
                    <div class="card-header">Slider Data Add</div>
                    <div class="card-body card-block">
                        <form action="/addSliderData" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class=" form-control-label">Course</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                    <input type="text" id="username"  name="title" placeholder="Title" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Course SubTitle</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                    <input type="text" name="subtitle" placeholder="Subtitle" class="form-control">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="file-input" class=" form-control-label">Course_Images:-</label>
                                    <input class="form-control-file" type="file" name="avtar" >
                                </div>
                            </div>
                            <div style="display: grid;" class="form-actions form-group">
                                <button type="submit" class="rounded btn btn-success">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<div class="content mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">View Slider Data</strong>
                </div>
                <div class="card-body">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Course_Images</th>
                                <th scope="col">Course</th>
                                <th scope="col">Course_Subtitle</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.map((val,index)=>{ %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><img src=" <%= val.avtar %>" width="100"></td>
                                    <td><%= val.title %></td>
                                    <td><%= val.subtitle %></td>
                                    <td>
                                        <a href="/deleteData/<%= val._id %>" class="btn btn-danger rounded">Delete</a>
                                    </td>
                                    <td>
                                        <a href="/editData/<%= val._id %>" class="btn btn-success rounded">Edit</a>
                                    </td>
                                        <% if(val.status == 1){ %>
                                           <td> <a href="/activeSlider/<%= val.id %>" class="btn btn-primary rounded">Active</a> </td>
                                        <% }else{ %>
                                           <td> <a href="/deactiveSlider/<%= val.id %>" class="btn btn-warning rounded">Deactive</a> </td>
                                         <%  } %>
                                </tr>   
                              <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("footer") %>