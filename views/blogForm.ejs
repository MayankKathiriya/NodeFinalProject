<%- include("header") %>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Add Blog Data</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/dashbord">Dashboard</a></li>
                    <li class="active">Blog</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">

            <div class="col-xs-6 col-sm-6">
                <div class="card">
                    <div class="card-header">Blog Data Add</div>
                    <div class="card-body card-block">
                        <form action="/addBlogData" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class=" form-control-label">Blog_Title</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                    <input type="text" id="username"  name="blogTitle" placeholder="Title" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Blog Description</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                    <input type="text" name="blogDescription" placeholder="Subtitle" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Author</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                    <input type="text" name="author" placeholder="Author" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Date</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                    <input type="date" name="date" placeholder="Subtitle" class="form-control">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="file-input" class=" form-control-label">Blog_Images:-</label>
                                    <input class="form-control-file" type="file" name="avtar" >
                                </div>
                            </div>
                            <div style="display: grid;" class="form-actions form-group">
                                <button type="submit" class="rounded btn btn-success">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<div class="content mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">View Slider Data</strong>
                </div>
                <div class="card-body">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Blog_Images</th>
                                <th scope="col">Blog_Title</th>
                                <th scope="col">Blog_Description</th>
                                <th scope="col">Author</th>
                                <th scope="col">Date</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.map((val,index)=>{ %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><img src=" <%= val.avtar %>" width="100"></td>
                                    <td><%= val.blogTitle %></td>
                                    <td><%= val.blogDescription  %></td>
                                    <td><%= val.author %></td>
                                    <td><%= val.date %></td>
                                    <td>
                                        <a href="/deleteBlog/<%= val._id %>" class="btn btn-danger rounded">Delete</a>
                                    </td>
                                    <td>
                                        <a href="/editblog/<%= val._id %>" class="btn btn-success rounded">Edit</a>
                                    </td>
                                        <% if(val.status == 1){ %>
                                           <td> <a href="/activeBlog/<%= val.id %>" class="btn btn-primary rounded">Active</a> </td>
                                        <% }else{ %>
                                           <td> <a href="/deactiveBlog/<%= val.id %>" class="btn btn-warning rounded">Deactive</a> </td>
                                         <%  } %>
                                </tr>   
                              <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("footer") %>